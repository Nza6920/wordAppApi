<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 接口设计模式的namespace需设置为接口的包路径 -->
<mapper namespace="my.dao.WordDao">

    <select id="getWordByLibrary" resultType="my.bean.Word">
        select * from `word` where library_id = #{id}
    </select>


</mapper>